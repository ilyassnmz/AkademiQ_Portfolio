<section id="section4" class="experience-section">
	<div class="container">
		<h2 class="section-title">Deneyimlerim</h2>

		<div class="timeline">

			@foreach (var item in Model)
			{
				<div class="timeline-item">
					<div class="timeline-icon">
						<i class="@item.IconUrl"></i>
					</div>

					<div class="timeline-content">
						<span class="timeline-date">@item.WorkDate</span>
						<h4>@item.Title</h4>
						<span class="timeline-company">@item.CompanyName</span>
						<p>@item.Description</p>
					</div>
				</div>
			}

		</div>
	</div>
</section>
