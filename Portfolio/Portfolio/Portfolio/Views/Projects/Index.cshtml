@model List<Portfolio.Entities.Work>

@{
    ViewData["Title"] = "Projeler";
    Layout = "~/Views/Admin/Index.cshtml";
}
<style>
    /* Ek Stiller */
    .projects-header {
        background-color: var(--card-bg);
        border-radius: 16px;
        padding: 25px;
        margin-bottom: 30px;
        box-shadow: var(--shadow-light);
        border: 1px solid var(--card-border);
    }

    .project-icon {
        font-size: 32px;
        margin-right: 15px;
    }

    .projects-subtitle {
        color: var(--text-gray);
        font-size: 16px;
        margin-top: 5px;
        font-weight: 500;
    }

    .card-image-container {
        position: relative;
        overflow: hidden;
    }

    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to bottom, transparent 70%, rgba(0,0,0,0.1));
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .card:hover .image-overlay {
        opacity: 1;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 15px;
        border-top: 1px solid var(--border-light);
        margin-top: 15px;
    }

    .project-type {
        background-color: var(--border-light);
        color: var(--text-gray);
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .view-project {
        color: var(--blue-primary);
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 5px;
        transition: color 0.3s ease;
    }

        .view-project:hover {
            color: var(--teal-primary);
        }

    .view-icon {
        font-size: 16px;
    }

    /* Boş Proje Durumu */
    .empty-projects {
        grid-column: 1 / -1;
        text-align: center;
        padding: 60px 30px;
        background-color: var(--card-bg);
        border-radius: 18px;
        box-shadow: var(--shadow-light);
        border: 2px dashed var(--border-light);
        margin-top: 20px;
    }

    .empty-icon {
        font-size: 60px;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    .empty-projects h3 {
        color: var(--text-dark);
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .empty-projects p {
        color: var(--text-gray);
        font-size: 16px;
        margin-bottom: 25px;
    }

    .add-project-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 25px;
        background: linear-gradient(135deg, var(--blue-primary), #4dabf7);
        color: white;
        border-radius: 10px;
        font-weight: 600;
        text-decoration: none;
        border: none;
        cursor: pointer;
        font-size: 15px;
        box-shadow: 0 4px 15px rgba(13, 110, 253, 0.2);
        transition: all 0.3s ease;
    }

        .add-project-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(13, 110, 253, 0.3);
        }

    .add-icon {
        font-size: 20px;
        font-weight: 700;
    }
</style>
<div class="container">
    <h2 class="projects-h2">Projelerim</h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="@item.ImageUrl" class="card-img-top" />
                    <div class="card-body">
                        <h5>@item.Title</h5>
                        <p>@item.SubTitle</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
