@model List<Portfolio.Entities.Work>

@{
    ViewData["Title"] = "Projeler";
    Layout = "~/Views/Admin/Index.cshtml";
}

<style>
    /* AÇIK TEMA - Projeler Sayfası */
    :root {
        --primary-white: #ffffff;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --text-gray: #6c757d;
        --text-dark: #343a40;
        --border-light: #dee2e6;
        --page-bg: #e9ecef;
        --section-bg: #f8f9fa;
        /* Kart Renkleri */
        --card-bg-1: #ffffff;
        --card-bg-2: #ffffff;
        --card-bg-3: #ffffff;
        /* Renkler */
        --blue-primary: #0d6efd;
        --blue-light: #e7f1ff;
        --blue-hover: #0b5ed7;
        --orange-primary: #fd7e14;
        --orange-light: #fff3e6;
        --orange-hover: #e56b00;
        --green-primary: #198754;
        --green-light: #e6f4ea;
        --green-hover: #157347;
        --purple-primary: #6f42c1;
        --purple-light: #f0e6ff;
        --teal-primary: #20c997;
        --teal-light: #e6f7f2;
        --yellow-primary: #ffc107;
        --yellow-light: #fff8e1;
        /* Gölgeler */
        --shadow-light: 0 3px 10px rgba(0,0,0,0.08);
        --shadow-medium: 0 6px 20px rgba(0,0,0,0.12);
        --shadow-strong: 0 10px 30px rgba(0,0,0,0.15);
        --shadow-card: 0 8px 25px rgba(0,0,0,0.1);
    }

    .container {
        background-color: #dee2e6; /* DAHA KOYU ARKA PLAN */
        min-height: 100vh;
        padding: 30px;
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        background-image: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Başlık Stili */
    .projects-h2 {
        color: var(--text-dark);
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid var(--border-light);
        position: relative;
        text-shadow: 0 1px 2px rgba(0,0,0,0.05);
    }

        .projects-h2::before {
            content: '';
            position: absolute;
            left: 0;
            bottom: -1px;
            width: 70px;
            height: 3px;
            background: linear-gradient(90deg, var(--blue-primary), #4dabf7);
            border-radius: 2px;
        }

    /* Grid Düzeni */
    .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 25px;
        margin: 0;
    }

    /* Kart Container */
    .col-md-4 {
        display: flex;
        padding: 0;
        margin: 0;
    }

    /* Kart Stilleri - BEYAZ ve GÜÇLÜ GÖLGELİ */
    .card {
        background-color: white;
        border-radius: 20px;
        padding: 0;
        position: relative;
        overflow: hidden;
        box-shadow: var(--shadow-card);
        border: 1px solid #dde1e6;
        transition: all 0.3s ease;
        width: 100%;
        display: flex;
        flex-direction: column;
        border-top: 4px solid var(--blue-primary);
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-strong);
            border-color: #c8ced6;
        }

    /* Resim Alanı */
    .card-img-top {
        width: 100%;
        height: 220px;
        object-fit: cover;
        display: block;
        border-bottom: 1px solid var(--border-light);
        transition: transform 0.5s ease;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    /* Resim Container Efekti */
    .card-img-top-container {
        position: relative;
        overflow: hidden;
    }

        .card-img-top-container::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 60px;
            background: linear-gradient(to top, rgba(0,0,0,0.1), transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

    .card:hover .card-img-top-container::after {
        opacity: 1;
    }

    /* Kart İçerik Alanı */
    .card-body {
        padding: 25px;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        background-color: white;
    }

    .card h5 {
        color: var(--text-dark);
        font-size: 22px;
        font-weight: 700;
        margin: 0 0 12px 0;
        line-height: 1.3;
        text-shadow: 0 1px 2px rgba(0,0,0,0.05);
        transition: color 0.3s ease;
    }

    .card:hover h5 {
        color: var(--blue-primary);
    }

    .card p {
        color: var(--text-gray);
        font-size: 15px;
        line-height: 1.6;
        margin: 0;
        flex-grow: 1;
    }

    /* Alternatif Border Renkleri - DB'deki proje sırasına göre */
    .col-md-4:nth-child(4n+1) .card {
        border-top-color: var(--blue-primary);
    }

    .col-md-4:nth-child(4n+2) .card {
        border-top-color: var(--teal-primary);
    }

    .col-md-4:nth-child(4n+3) .card {
        border-top-color: var(--orange-primary);
    }

    .col-md-4:nth-child(4n+4) .card {
        border-top-color: var(--purple-primary);
    }

    /* Kart Üst Çizgi Efekti */
    .card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--blue-primary), transparent);
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 1;
    }

    .card:hover::before {
        opacity: 1;
    }

    /* Teknoloji Tagları (SubTitle'dan gelen teknolojiler için) */
    .card p {
        position: relative;
        padding-left: 24px;
    }

        .card p::before {
            content: '⚡';
            position: absolute;
            left: 0;
            top: 0;
            font-size: 16px;
            color: var(--orange-primary);
        }

    /* Proje ID Göstergesi (isteğe bağlı) */
    .card::after {
        content: '#' attr(data-project-id);
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(255, 255, 255, 0.9);
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 600;
        color: var(--text-gray);
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .card:hover::after {
        opacity: 1;
    }

    /* Boş Durum */
    .project-grid:empty::after {
        content: 'Henüz proje eklenmemiş';
        display: block;
        grid-column: 1 / -1;
        text-align: center;
        padding: 60px 30px;
        background-color: white;
        border-radius: 18px;
        color: var(--text-gray);
        font-size: 18px;
        box-shadow: var(--shadow-light);
        border: 2px dashed var(--border-light);
        margin-top: 20px;
    }

    
    /* Ekstra Efektler */
    .card {
        position: relative;
    }

        .card .project-tech {
            display: inline-block;
            background: var(--blue-light);
            color: var(--blue-primary);
            padding: 3px 10px;
            border-radius: 10px;
            font-size: 12px;
            font-weight: 600;
            margin-right: 8px;
            margin-bottom: 8px;
        }

    /* Grid için smooth geçiş */
    .project-grid {
        transition: grid-template-columns 0.3s ease;
    }

        /* Proje sayısı azsa merkezleme */
        .project-grid:has(.col-md-4:nth-child(4)) {
            max-width: 1200px;
            margin: 0 auto;
        }

    /* Genel Ayarlar */
    * {
        box-sizing: border-box;
    }

    /* Veritabanından gelen teknoloji tagları için özel stiller */
    .card-body p {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        align-items: center;
    }

    .tech-tag {
        background: linear-gradient(135deg, var(--teal-light), var(--blue-light));
        color: var(--text-dark);
        padding: 4px 12px;
        border-radius: 15px;
        font-size: 12px;
        font-weight: 600;
        border: 1px solid var(--border-light);
    }
</style>

<div class="container">
    <h2 class="projects-h2">Projelerim</h2>

    <div class="row project-grid">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card" data-project-id="@item.WorkId">
                    <div class="card-img-top-container">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" />
                    </div>
                    <div class="card-body">
                        <h5>@item.Title</h5>
                        <div class="tech-tags">
                            @foreach (var tech in item.SubTitle.Split("•"))
                            {
                                <span class="tech-tag">@tech.Trim()</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
