<style>
    /* AÇIK TEMA - İletişim Sayfası */
    :root {
        --primary-white: #ffffff;
        --light-gray: #f8f9fa;
        --medium-gray: #e9ecef;
        --text-gray: #6c757d;
        --text-dark: #343a40;
        --border-light: #dee2e6;
        --page-bg: #e9ecef;
        /* Renkler */
        --blue-primary: #0d6efd;
        --blue-light: #e7f1ff;
        --blue-hover: #0b5ed7;
        --orange-primary: #fd7e14;
        --orange-light: #fff3e6;
        --orange-hover: #e56b00;
        --green-primary: #198754;
        --green-light: #e6f4ea;
        --green-hover: #157347;
        --purple-primary: #6f42c1;
        --purple-light: #f0e6ff;
        --purple-hover: #5f3dc4;
        --teal-primary: #20c997;
        --teal-light: #e6f7f2;
        --yellow-primary: #ffc107;
        --yellow-light: #fff8e1;
        --red-primary: #dc3545;
        --red-light: #f8d7da;
        /* Gölgeler */
        --shadow-light: 0 3px 10px rgba(0,0,0,0.08);
        --shadow-medium: 0 6px 20px rgba(0,0,0,0.12);
        --shadow-strong: 0 10px 30px rgba(0,0,0,0.15);
        --shadow-card: 0 8px 25px rgba(0,0,0,0.1);
    }

    /* Sayfa Genel Stilleri */
    .contact-container {
        background-color: #dee2e6;
        min-height: 100vh;
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        background-image: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
        padding: 40px;
        color: #2c3e50;
    }

    /* Grid Container */
    .contact-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* İletişim Kartları */
    .contact-card {
        background: white;
        border-radius: 20px;
        padding: 35px;
        box-shadow: var(--shadow-card);
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

        .contact-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-strong);
            border-color: #ced4da;
        }

        /* Kart Header */
        .contact-card h5 {
            color: #2c3e50;
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f1f3f5;
            position: relative;
        }

            .contact-card h5::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                width: 60px;
                height: 2px;
                background: linear-gradient(90deg, #0d6efd, #20c997);
            }

    /* İletişim Kanalları */
    .contact-channels {
        display: flex;
        flex-direction: column;
        gap: 22px;
    }

    .contact-item {
        display: flex;
        align-items: flex-start;
        gap: 15px;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 12px;
        border: 1px solid #e9ecef;
        transition: all 0.3s ease;
    }

        .contact-item:hover {
            background: #e7f1ff;
            border-color: #d4e3ff;
            transform: translateX(5px);
        }

    .contact-icon {
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        flex-shrink: 0;
    }

    /* İkon Renkleri */
    .contact-item:nth-child(1) .contact-icon {
        background: linear-gradient(135deg, #0d6efd, #4dabf7);
        color: white;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.2);
    }

    .contact-item:nth-child(2) .contact-icon {
        background: linear-gradient(135deg, #20c997, #38d9a9);
        color: white;
        box-shadow: 0 4px 12px rgba(32, 201, 151, 0.2);
    }

    .contact-item:nth-child(3) .contact-icon {
        background: linear-gradient(135deg, #6f42c1, #845ef7);
        color: white;
        box-shadow: 0 4px 12px rgba(111, 66, 193, 0.2);
    }

    .contact-item:nth-child(4) .contact-icon {
        background: linear-gradient(135deg, #fd7e14, #ff922b);
        color: white;
        box-shadow: 0 4px 12px rgba(253, 126, 20, 0.2);
    }

    .contact-info {
        flex: 1;
    }

    .contact-label {
        display: block;
        color: #6c757d;
        font-size: 13px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 6px;
    }

    .contact-value {
        color: #2c3e50;
        font-size: 16px;
        font-weight: 600;
        display: block;
    }

    .contact-link {
        color: #0d6efd;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-block;
    }

        .contact-link:hover {
            color: #20c997;
            transform: translateX(3px);
        }

    /* Konum Kartı */
    .location-card {
        background: white;
        border-radius: 20px;
        padding: 35px;
        box-shadow: var(--shadow-card);
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .location-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-strong);
            border-color: #ced4da;
        }

    .location-info {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-top: 20px;
        padding: 18px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 15px;
        border: 1px solid #e9ecef;
    }

    .location-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        background: linear-gradient(135deg, #0d6efd, #4dabf7);
        color: white;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.2);
        flex-shrink: 0;
    }

    .location-text {
        color: #2c3e50;
        font-size: 18px;
        font-weight: 700;
    }

    /* Harita Kartı */
    .map-card {
        background: white;
        border-radius: 20px;
        padding: 35px;
        box-shadow: var(--shadow-card);
        border: 2px solid #e9ecef;
        transition: all 0.3s ease;
        grid-column: 2;
        grid-row: 1 / span 2;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

        .map-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-strong);
            border-color: #ced4da;
        }

    .map-container {
        width: 100%;
        height: 400px;
        border-radius: 15px;
        overflow: hidden;
        border: 2px solid #e9ecef;
        margin-top: 20px;
    }

    iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    /* Kart Dekorasyonları */
    .contact-card::before,
    .location-card::before,
    .map-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #0d6efd, #20c997, #6f42c1);
        z-index: 1;
    }

    /* Kart İçi Boşluk */
    .contact-content {
        margin-top: 10px;
    }

    /* Responsive OLMADAN - Sabit tasarım */
    /* Tüm elementler sabit pozisyonda kalacak */

    /* Hover Efekti Detayları */
    .contact-item:hover .contact-icon {
        transform: scale(1.1);
        transition: transform 0.3s ease;
    }

    /* Konum kartı için ek efekt */
    .location-info:hover {
        background: linear-gradient(135deg, #e7f1ff 0%, #d4e3ff 100%);
        border-color: #0d6efd;
        transform: translateX(5px);
    }

    /* Harita kartı için ek stil */
    .map-card h5 {
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .map-card h5::before {
            content: '📍';
            font-size: 20px;
        }

    /* Genel düzenlemeler */
    * {
        box-sizing: border-box;
    }

    /* Kartların yükseklik uyumu */
    .contact-grid {
        align-items: stretch;
    }

    /* Başlık için ek stil */
    .contact-container::before {
        content: '📞 İletişim';
        display: block;
        color: #2c3e50;
        font-size: 36px;
        font-weight: 800;
        margin-bottom: 40px;
        text-align: center;
        position: relative;
        padding-bottom: 20px;
    }

    .contact-container::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 150px;
        height: 4px;
        background: linear-gradient(90deg, #0d6efd, #20c997);
        border-radius: 2px;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // İletişim bilgilerini dinamik olarak işle
        const contactItems = document.querySelectorAll('.contact-item');

        // Telefon numarasına tıklama
        contactItems[0].addEventListener('click', function() {
            const phoneNumber = '5551413351';
            if (confirm(`Aramak istediğiniz numara: ${phoneNumber}\nAramak ister misiniz?`)) {
                window.location.href = `tel:${phoneNumber}`;
            }
        });

        // E-posta adresine tıklama
        contactItems[1].addEventListener('click', function() {
            const email = 'lunap.ilyas@gmail.com';
            if (confirm(`E-posta göndermek istediğiniz adres: ${email}\nE-posta göndermek ister misiniz?`)) {
                window.location.href = `mailto:${email}`;
            }
        });

        // LinkedIn linkini açma
        const linkedinLink = document.querySelector('a[href*="linkedin.com"]');
        if (linkedinLink) {
            linkedinLink.addEventListener('click', function(e) {
                e.stopPropagation();
                window.open(this.href, '_blank');
            });
        }

        // GitHub linkini açma
        const githubLink = document.querySelector('a[href*="github.com"]');
        if (githubLink) {
            githubLink.addEventListener('click', function(e) {
                e.stopPropagation();
                window.open(this.href, '_blank');
            });
        }

        // Hover efekti için z-index ayarı
        const cards = document.querySelectorAll('.contact-card, .location-card, .map-card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.zIndex = '10';
            });

            card.addEventListener('mouseleave', function() {
                this.style.zIndex = '1';
            });
        });

        // Harita yüklendiğinde
        const iframe = document.querySelector('iframe');
        if (iframe) {
            iframe.addEventListener('load', function() {
                console.log('Harita yüklendi');
            });
        }

        // Konum bilgisini vurgula
        const locationText = document.querySelector('.location-text');
        if (locationText) {
            locationText.innerHTML = locationText.innerHTML.replace(
                'Mersin / Toroslar',
                '<span style="background: linear-gradient(135deg, #0d6efd, #20c997); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Mersin / Toroslar</span>'
            );
        }
    });
</script>

