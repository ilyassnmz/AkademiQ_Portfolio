<<style>
     /* AÇIK TEMA - Eğitim Listesi Sayfası */
     :root {
         --primary-white: #ffffff;
         --light-gray: #f8f9fa;
         --medium-gray: #e9ecef;
         --text-gray: #6c757d;
         --text-dark: #343a40;
         --border-light: #dee2e6;
         --page-bg: #e9ecef;
         /* Renkler */
         --blue-primary: #0d6efd;
         --blue-light: #e7f1ff;
         --blue-hover: #0b5ed7;
         --orange-primary: #fd7e14;
         --orange-light: #fff3e6;
         --orange-hover: #e56b00;
         --green-primary: #198754;
         --green-light: #e6f4ea;
         --green-hover: #157347;
         --purple-primary: #6f42c1;
         --purple-light: #f0e6ff;
         --purple-hover: #5f3dc4;
         --teal-primary: #20c997;
         --teal-light: #e6f7f2;
         --yellow-primary: #ffc107;
         --yellow-light: #fff8e1;
         --red-primary: #dc3545;
         --red-light: #f8d7da;
         /* Gölgeler */
         --shadow-light: 0 3px 10px rgba(0,0,0,0.08);
         --shadow-medium: 0 6px 20px rgba(0,0,0,0.12);
         --shadow-strong: 0 10px 30px rgba(0,0,0,0.15);
         --shadow-card: 0 8px 25px rgba(0,0,0,0.1);
     }

     /* Sayfa Genel Stilleri */
     .education-container {
         background-color: #dee2e6;
         min-height: 100vh;
         font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
         background-image: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
         padding: 40px 30px;
         color: #2c3e50;
     }

     /* Sayfa Header */
     .education-header {
         background-color: var(--primary-white);
         border-radius: 20px;
         padding: 30px;
         margin-bottom: 30px;
         box-shadow: var(--shadow-card);
         border: 2px solid #d1d9e6;
         background-image: linear-gradient(135deg, #ffffff 0%, #fafbfd 100%);
         display: flex;
         justify-content: space-between;
         align-items: center;
         flex-wrap: wrap;
         gap: 20px;
         max-width: 1200px;
         margin-left: auto;
         margin-right: auto;
     }

     /* Sayfa Başlığı */
     .education-title {
         color: #2c3e50;
         font-size: 36px;
         font-weight: 800;
         margin: 0;
         text-shadow: 0 1px 2px rgba(0,0,0,0.05);
         position: relative;
         padding-left: 25px;
     }

         .education-title::before {
             content: '';
             position: absolute;
             left: 0;
             top: 50%;
             transform: translateY(-50%);
             width: 6px;
             height: 70%;
             background: linear-gradient(to bottom, #0d6efd, #20c997);
             border-radius: 3px;
         }

     /* Yeni Eğitim Ekle Butonu */
     .add-education-btn {
         display: inline-flex;
         align-items: center;
         gap: 12px;
         padding: 14px 28px;
         background: linear-gradient(135deg, var(--green-primary), #20c997);
         color: white;
         border-radius: 14px;
         font-weight: 700;
         text-decoration: none;
         border: none;
         cursor: pointer;
         font-size: 16px;
         box-shadow: 0 6px 20px rgba(25, 135, 84, 0.2);
         transition: all 0.3s ease;
         text-align: center;
     }

         .add-education-btn:hover {
             transform: translateY(-3px);
             box-shadow: 0 10px 30px rgba(25, 135, 84, 0.3);
             background: linear-gradient(135deg, var(--green-hover), #1da87c);
         }

         .add-education-btn i {
             font-size: 18px;
         }

     /* Arama Kutusu */
     .search-box {
         max-width: 1200px;
         margin: 0 auto 25px auto;
         position: relative;
     }

     .search-input {
         width: 100%;
         padding: 16px 20px 16px 55px;
         border: 2px solid #e9ecef;
         border-radius: 14px;
         background: white;
         font-size: 16px;
         color: #2c3e50;
         transition: all 0.3s ease;
         box-shadow: var(--shadow-light);
     }

         .search-input:focus {
             outline: none;
             border-color: #0d6efd;
             box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1);
             transform: translateY(-2px);
         }

         .search-input::placeholder {
             color: #adb5bd;
         }

     .search-icon {
         position: absolute;
         left: 20px;
         top: 50%;
         transform: translateY(-50%);
         color: #6c757d;
         font-size: 18px;
     }

     /* Filtre Butonları */
     .education-filters {
         max-width: 1200px;
         margin: 0 auto 35px auto;
         display: flex;
         gap: 12px;
         flex-wrap: wrap;
     }

     .filter-btn {
         padding: 12px 24px;
         background: white;
         border-radius: 12px;
         border: 2px solid #e9ecef;
         font-size: 14px;
         font-weight: 600;
         color: #6c757d;
         cursor: pointer;
         transition: all 0.3s ease;
         box-shadow: var(--shadow-light);
     }

         .filter-btn:hover {
             background: #f8f9fa;
             border-color: #ced4da;
             transform: translateY(-2px);
         }

         .filter-btn.active {
             background: linear-gradient(135deg, #0d6efd, #4dabf7);
             color: white;
             border-color: transparent;
             box-shadow: 0 6px 20px rgba(13, 110, 253, 0.2);
         }

     /* Eğitim Kartları Grid */
     .education-grid {
         max-width: 1200px;
         margin: 0 auto;
         display: grid;
         grid-template-columns: repeat(auto-fill, minmax(550px, 1fr));
         gap: 25px;
     }

     /* Eğitim Kartı */
     .education-card {
         background: white;
         border-radius: 20px;
         overflow: hidden;
         box-shadow: var(--shadow-card);
         border: 2px solid #e9ecef;
         transition: all 0.3s ease;
         display: flex;
         flex-direction: column;
     }

         .education-card:hover {
             transform: translateY(-8px);
             box-shadow: var(--shadow-strong);
             border-color: #ced4da;
         }

     /* Kart Header */
     .education-card-header {
         padding: 25px;
         background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
         border-bottom: 2px solid #e9ecef;
         position: relative;
     }

     /* Durum Etiketi */
     .education-status {
         position: absolute;
         top: 20px;
         right: 20px;
         padding: 8px 18px;
         border-radius: 20px;
         font-size: 12px;
         font-weight: 700;
         text-transform: uppercase;
         letter-spacing: 0.5px;
         box-shadow: 0 3px 10px rgba(0,0,0,0.1);
     }

     .status-active {
         background: linear-gradient(135deg, var(--green-primary), #20c997);
         color: white;
     }

     .status-completed {
         background: linear-gradient(135deg, var(--purple-primary), #845ef7);
         color: white;
     }

     /* Kurum Bilgisi */
     .education-institution {
         display: flex;
         align-items: center;
         gap: 20px;
     }

     .institution-icon {
         width: 70px;
         height: 70px;
         border-radius: 16px;
         display: flex;
         align-items: center;
         justify-content: center;
         font-size: 28px;
         box-shadow: 0 6px 20px rgba(0,0,0,0.1);
     }

     .status-active ~ .education-institution .institution-icon {
         background: linear-gradient(135deg, var(--green-light), #d1fae5);
         color: var(--green-primary);
     }

     .status-completed ~ .education-institution .institution-icon {
         background: linear-gradient(135deg, var(--purple-light), #e0d4f7);
         color: var(--purple-primary);
     }

     .institution-info h3 {
         color: #2c3e50;
         font-size: 22px;
         font-weight: 700;
         margin: 0 0 5px 0;
     }

     .institution-info p {
         color: #6c757d;
         font-size: 14px;
         font-weight: 500;
         margin: 0;
     }

     /* Kart İçerik */
     .education-card-body {
         padding: 25px;
         flex-grow: 1;
     }

     /* Eğitim Detayları */
     .education-detail {
         margin-bottom: 20px;
         padding-bottom: 20px;
         border-bottom: 1px solid #e9ecef;
     }

         .education-detail:last-child {
             margin-bottom: 0;
             padding-bottom: 0;
             border-bottom: none;
         }

     .detail-label {
         font-size: 12px;
         font-weight: 700;
         color: #6c757d;
         text-transform: uppercase;
         letter-spacing: 0.5px;
         margin-bottom: 8px;
         display: flex;
         align-items: center;
         gap: 10px;
     }

         .detail-label i {
             color: #0d6efd;
             font-size: 16px;
             width: 20px;
         }

     .detail-value {
         font-size: 17px;
         color: #2c3e50;
         font-weight: 600;
         line-height: 1.5;
         padding-left: 30px;
     }

     /* Açıklama */
     .education-description {
         background: #f8f9fa;
         border-radius: 12px;
         padding: 20px;
         margin-top: 20px;
         font-size: 15px;
         color: #495057;
         line-height: 1.6;
         border-left: 4px solid #0d6efd;
     }

     /* Kart Footer */
     .education-card-footer {
         padding: 20px 25px;
         background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
         border-top: 2px solid #e9ecef;
         display: flex;
         justify-content: space-between;
         align-items: center;
     }

     .education-date {
         font-size: 14px;
         color: #6c757d;
         font-weight: 600;
         display: flex;
         align-items: center;
         gap: 10px;
     }

         .education-date i {
             color: #0d6efd;
             font-size: 16px;
         }

     /* İşlem Butonları */
     .education-actions {
         display: flex;
         gap: 12px;
     }

     .action-btn {
         width: 45px;
         height: 45px;
         border-radius: 12px;
         display: flex;
         align-items: center;
         justify-content: center;
         transition: all 0.3s ease;
         cursor: pointer;
         border: none;
         color: white;
         font-size: 18px;
         box-shadow: 0 4px 10px rgba(0,0,0,0.1);
     }

     .edit-btn {
         background: linear-gradient(135deg, var(--blue-primary), #4dabf7);
     }

         .edit-btn:hover {
             background: linear-gradient(135deg, var(--blue-hover), #3d8bf7);
             transform: translateY(-3px) scale(1.05);
             box-shadow: 0 6px 20px rgba(13, 110, 253, 0.3);
         }

     .delete-btn {
         background: linear-gradient(135deg, var(--red-primary), #ff6b6b);
     }

         .delete-btn:hover {
             background: linear-gradient(135deg, #c82333, #ff5252);
             transform: translateY(-3px) scale(1.05);
             box-shadow: 0 6px 20px rgba(220, 53, 69, 0.3);
         }

     /* Boş Durum */
     .education-grid:empty::after {
         content: 'Henüz eğitim eklenmemiş';
         display: block;
         grid-column: 1 / -1;
         text-align: center;
         padding: 60px 30px;
         background: white;
         border-radius: 20px;
         color: #6c757d;
         font-size: 18px;
         font-weight: 500;
         box-shadow: var(--shadow-light);
         border: 2px dashed #e9ecef;
         margin-top: 20px;
     }

     .education-grid:empty::before {
         content: '🎓';
         font-size: 48px;
         display: block;
         margin-bottom: 20px;
         opacity: 0.5;
     }

     
     /* Hover Gradient Efekti */
     .education-card::before {
         content: '';
         position: absolute;
         top: 0;
         left: 0;
         right: 0;
         height: 4px;
         background: linear-gradient(90deg, #0d6efd, #20c997);
         opacity: 0;
         transition: opacity 0.3s ease;
         z-index: 1;
     }

     .education-card:hover::before {
         opacity: 1;
     }

     /* Kart Renk Varyasyonları */
     .education-card:nth-child(2n) .institution-icon {
         background: linear-gradient(135deg, var(--orange-light), #ffe8cc) !important;
         color: var(--orange-primary) !important;
     }

     .education-card:nth-child(3n) .institution-icon {
         background: linear-gradient(135deg, var(--teal-light), #d3f9d8) !important;
         color: var(--teal-primary) !important;
     }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Filtre butonları işlevselliği
        const filterButtons = document.querySelectorAll('.filter-btn');
        filterButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Aktif butonu değiştir
                filterButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');

                const filter = this.textContent;
                const cards = document.querySelectorAll('.education-card');

                cards.forEach(card => {
                    const statusElement = card.querySelector('.education-status');
                    if (!statusElement) return;

                    const status = statusElement.textContent;

                    if (filter === 'Tümü') {
                        card.style.display = 'flex';
                    } else if (filter === 'Devam Eden' && status === 'Devam Ediyor') {
                        card.style.display = 'flex';
                    } else if (filter === 'Tamamlanan' && status === 'Tamamlandı') {
                        card.style.display = 'flex';
                    } else if (filter === 'Son Eklenenler') {
                        // İlk 2 kartı göster (örnek)
                        const cardIndex = Array.from(cards).indexOf(card);
                        card.style.display = cardIndex < 2 ? 'flex' : 'none';
                    } else if (filter === 'Eski Kayıtlar') {
                        // Son 2 kartı göster (örnek)
                        const cardIndex = Array.from(cards).indexOf(card);
                        const totalCards = cards.length;
                        card.style.display = cardIndex >= totalCards - 2 ? 'flex' : 'none';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        });

        // Arama işlevselliği
        const searchInput = document.querySelector('.search-input');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const cards = document.querySelectorAll('.education-card');

                cards.forEach(card => {
                    const institution = card.querySelector('h3')?.textContent.toLowerCase() || '';
                    const field = card.querySelector('.detail-value')?.textContent.toLowerCase() || '';
                    const description = card.querySelector('.education-description')?.textContent.toLowerCase() || '';

                    if (institution.includes(searchTerm) ||
                        field.includes(searchTerm) ||
                        description.includes(searchTerm)) {
                        card.style.display = 'flex';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        }

        // Silme işlemi onayı
        window.confirmDelete = function(id) {
            if (confirm('Bu eğitimi silmek istediğinize emin misiniz?\nBu işlem geri alınamaz.')) {
                console.log('Eğitim siliniyor:', id);
                // Örnek: location.href = '/Education/Delete/' + id;

                // Örnek olarak kartı kaldırma
                const cards = document.querySelectorAll('.education-card');
                const card = cards[id - 1];
                if (card) {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    setTimeout(() => {
                        card.remove();
                    }, 300);
                }
            }
        };

        // Hover efektleri
        const educationCards = document.querySelectorAll('.education-card');
        educationCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.zIndex = '10';
            });

            card.addEventListener('mouseleave', function() {
                this.style.zIndex = '1';
            });
        });

        // Boş grid kontrolü (eğer kart yoksa mesaj göster)
        const educationGrid = document.querySelector('.education-grid');
        if (educationGrid && educationGrid.children.length === 0) {
            const emptyMessage = document.createElement('div');
            emptyMessage.className = 'empty-message';
            emptyMessage.innerHTML = `
                <div style="text-align: center; padding: 60px 30px; background: white; border-radius: 20px;
                    color: #6c757d; font-size: 18px; font-weight: 500; box-shadow: 0 8px 25px rgba(0,0,0,0.1);
                    border: 2px dashed #e9ecef;">
                    <div style="font-size: 48px; margin-bottom: 20px; opacity: 0.5;">🎓</div>
                    Henüz eğitim eklenmemiş
                </div>
            `;
            educationGrid.appendChild(emptyMessage);
        }
    });
</script>

